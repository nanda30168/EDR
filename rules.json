[
    {
      "id": "rule1",
      "name": "High CPU Usage",
      "description": "Detects processes with CPU usage above 30%",
      "condition": {
        "field": "cpu_usage",
        "operator": ">",
        "value": 30
      },
      "severity": "high"
    },
    {
      "id": "rule2",
      "name": "Suspicious Network Connection",
      "description": "Detects connections to known malicious IPs",
      "condition": {
        "field": "remote_address",
        "operator": "in",
        "value": ["192.168.1.100", "10.0.0.5"]
      },
      "severity": "critical"
    }
  ]